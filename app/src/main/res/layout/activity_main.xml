<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#16b9b4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BroadCast Reciever"
        android:id="@+id/title"
        android:textColor="#000000"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amount Recieved"
        android:id="@+id/amountTitle"
        android:layout_marginTop="92dp"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:textColor="#040000"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_toStartOf="@+id/conversion"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/amountRecieved"
        android:textColor="#f8efef"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/amountTitle"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Values"
        android:id="@+id/approve"
        android:textColor="#070707"
        android:onClick="onPress"
        android:gravity="center_vertical|left"
        android:layout_alignTop="@+id/conversion"
        android:layout_alignEnd="@+id/convert" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:id="@+id/conversion"
        android:textColor="#080808"
        android:layout_marginBottom="85dp"
        android:onClick="convert"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Conversion Type"
        android:id="@+id/convert"
        android:gravity="center_vertical"
        android:textColor="#0c0000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/coversionTo"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#f2e2e2"
        android:layout_below="@+id/convert"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal" />

</RelativeLayout>